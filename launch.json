    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome - Open index.html",
            "request": "launch",
            "type": "chrome",
            "url": "file:///${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Chrome - Local Server (Port 8080)",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Start HTTP Server"
        }
    ]
}