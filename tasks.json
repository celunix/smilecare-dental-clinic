{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start HTTP Server",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "http.server",
                "8080"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "Serving HTTP"
                }
            },
            "options": {
                "shell": {
                    "executable": "powershell.exe"
                }
            }
        }
    ]
}

